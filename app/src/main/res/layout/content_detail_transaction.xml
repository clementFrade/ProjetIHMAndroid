<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context=".DetailTransactionActivity"
    tools:showIn="@layout/activity_detail_transaction">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/textViewTitre"
            android:layout_width="match_parent"
            android:layout_height="46dp"
            android:layout_gravity="center_horizontal"
            android:text="Ajouter une dépense"
            android:textAppearance="?android:attr/textAppearanceLarge" />

        <Space
            android:layout_width="match_parent"
            android:layout_height="53dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:orientation="horizontal">

            <EditText
                android:id="@+id/TextTitre"
                android:layout_width="273dp"
                android:layout_height="wrap_content"
                android:hint="titre"
                android:inputType="" />

            <Button
                android:id="@+id/Photo"
                android:layout_width="116dp"
                android:layout_height="wrap_content"
                android:text="Photo" />

        </LinearLayout>

        <Space
            android:layout_width="match_parent"
            android:layout_height="56dp" />

        <EditText
            android:id="@+id/TextMontant"
            android:layout_width="match_parent"
            android:layout_height="82dp"
            android:hint="Montant"
            android:inputType="numberDecimal" />

        <Space
            android:layout_width="match_parent"
            android:layout_height="44dp" />

        <EditText
            android:id="@+id/editTextDate"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:hint="Date"
            android:inputType="date" />

        <Space
            android:layout_width="match_parent"
            android:layout_height="58dp" />

        <TextView
            android:id="@+id/Pay"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Payé par"
            android:textSize="18sp" />

        <Spinner
            android:id="@+id/Payeur"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Payé par" />

        <Space
            android:layout_width="match_parent"
            android:layout_height="34dp" />

        <TextView
            android:id="@+id/payFor"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Pour qui"
            android:textSize="18sp" />

        <Spinner
            android:id="@+id/Payé"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Pour qui" />

        <Button
            android:id="@+id/buttonValider"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Valider" />

        <com.google.android.gms.maps.MapView
            android:id="@+id/mapView"
            android:layout_width="match_parent"
            android:layout_height="177dp" />


    </LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>